{
  "manifest_version": 3,
  "name": "Article Reader View",
  "version": "1.0",
  "description": "Converts web articles into a clean, readable format",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "type": "module"
    }
  ],
  "web_accessible_resources": [{
    "resources": ["content/*.js", "reader/*.js"],
    "matches": ["<all_urls>"],
    "use_dynamic_url": true
  }],
  "action": {
    "default_title": "Toggle Reader View"
  }
}